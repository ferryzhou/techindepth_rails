<h1>Listing articles</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Link</th>
    <th>Pubdate</th>
    <th>Magzine</th>
  </tr>

<%= will_paginate @articles %>

<% @articles.each do |article| %>
  <tr>
    <td><%= link_to article.title, article %></td>
    <td><%= link_to 'original', article.link %></td>
    <td><%= article.pubdate.strftime('%m/%d/%Y') %></td>
    <td><%= link_to article.magzine.name, "/articles?m=#{article.magzine.name}" %></td>
  </tr>
<% end %>
</table>

